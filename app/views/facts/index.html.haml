%section{ data: { controller: 'section', section_url: list_facts_path}}
  %h3.title.has-text-centered
    %i.fas.fa-calendar
    = t 'activerecord.models.fact.other'
  .columns
    %aside.column.is-3
      %nav.panel
        %p.panel-heading= t 'site.fact.search'
        = form_with scope: 'filter', url: list_facts_path, method: :get, data: {remote: true, action: "ajax:success->section#goPage"} do |f|
          .panel-block
            %p.control.has-icons-left
              = f.text_field :text, placeholder: 'Testo', class: 'input', data: {action: 'keyup->section#delayedSendForm'}
              %span.icon.is-left
                %i.fas.fa-search
          %label.panel-block
            = f.radio_button :type, '', selected: true, data: {action: "section#sendForm"}
            %span= t('future', scope: 'site.fact.scope')
          %label.panel-block
            = f.radio_button :type, 'history', selected: true, data: {action: "section#sendForm"}
            %span= t('history', scope: 'site.fact.scope')
    .column{ data: { target: 'section.container' } }


