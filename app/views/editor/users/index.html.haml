%turbo-frame#yield
  %h3.title.has-text-centered
    %i.fas.fa-tools
    Gestione
    = t 'activerecord.models.user.other'
  .columns
    %aside.column.is-3
      %nav.panel
        %p.panel-heading= t 'site.editor.user.search'
        = form_with scope: 'filter', url: list_editor_users_path, method: :get, data: {turbo_frame: 'users', controller: 'form', form_target: 'sender'} do |f|
          .panel-block
            %p.control.has-icons-left
              = f.text_field :text, placeholder: 'Testo', class: 'input', data: {action: 'keyup->form#delayedSendForm'}
              %span.icon.is-left
                %i.fas.fa-search
    .column
      %turbo-frame#users{src: list_editor_users_path }
