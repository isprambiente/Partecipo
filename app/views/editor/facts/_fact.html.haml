%a.box.is-hoverable{href: editor_fact_path(fact), data: {turbo_frame: 'yield'}}
  .columns.is-mobile.is-gapless
    .column.is-narrow
      .figure.image.is-boxed-left-image= image_tag fact.image.variant(:aside).processed
    .column
      %h5.title.is-size-5= fas_icon 'calendar-alt', text: fact.title
      %h6.subtitle.is-size-6
        = fas_icon 'calendar-day', text: fact.happenings_count
        \|
        = t 'site.generic.from'
        = l fact.start_on
        = t 'site.generic.to'
        = l fact.stop_on
    .column.is-narrow.has-text-right
      %span.subtitle.is-size-6

