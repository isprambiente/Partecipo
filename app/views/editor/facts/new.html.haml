%h3.title.has-text-centered
  %i.fas.fa-calendar
  Nuovo evento
.columns
  %aside.column.is-3
    %nav.panel
      %p.panel-heading= t 'site.happening.search'
      = form_with scope: 'filter', url: '#', method: :get, data: {action: "ajax:success->section#goPage"} do |f|
        .panel-block
          %p.control.has-icons-left
            = f.text_field :text, placeholder: 'Testo', class: 'input', data: {action: 'keyup->section#delayedSendForm'}, disabled: true
            %span.icon.is-left
              %i.fas.fa-search
        %label.panel-block
          = f.radio_button :type, '', selected: true, data: {action: "section#sendForm"}, disabled: true
          %span= t('future', scope: 'site.happening.scope')
        %label.panel-block
          = f.radio_button :type, 'history', selected: true, data: {action: "section#sendForm"}, disabled: true
          %span= t('history', scope: 'site.happening.scope')
    %figure.image= image_pack_tag('image.png')
  .column
    .box= render 'form', fact: @fact

