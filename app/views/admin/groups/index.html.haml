%h3.title.has-text-centered
  %i.fas.fa-users
  Gestione
  = t 'activerecord.models.group.other'
.columns
  %aside.column.is-3
    %nav.panel
      %p.panel-heading= t 'site.users.search'
      = form_with scope: 'filter', url: list_admin_groups_path, method: :get, data: {turbo_frame: 'groups', controller: 'form', form_target: 'sender'} do |f|
        .panel-block
          %p.control.has-icons-left
            = f.text_field :text, placeholder: 'Testo', class: 'input', data: {action: 'keyup->form#delayedSendForm'}
            %span.icon.is-left
              %i.fas.fa-search
        .panel-block= link_to fas_icon('plus fa-fw', text: 'Nuovo gruppo'), new_admin_group_path, class: 'is-success button is-fullwidth', data: {turbo_frame: 'groups'}
  .column
    %turbo-frame#groups{src: list_admin_groups_path}
